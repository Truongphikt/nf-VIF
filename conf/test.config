/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/mypipeline -profile test
 */

params {
  
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 16.GB
  max_time = 48.h
  
  // Input data
  singleEnd = false
  genome = 'hg19'
  skipFastqc = true
  fasta = "${params.genomes['hg19'].fasta}"
  fastaHpv = "$params.genomes.HPV.fasta"

  readPaths = [
    ['L99R27', ["$baseDir/tests/data/L99R27.R1.fastq.gz", "$baseDir/tests/data/L99R27.R2.fastq.gz"]],
    ['L212R22', ["$baseDir/tests/data/L212R22.R1.fastq.gz", "$baseDir/tests/data/L212R22.R2.fastq.gz"]]
  ]
  //samplePlan = "$baseDir/tests/samplePlan_L353.csv"
  //samplePlan = "$baseDir/tests/samplePlan.csv"
}
